{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",         
    "moduleResolution": "node",
    "outDir": "dist",           
    "esModuleInterop": true,    
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "paths": {"*": ["./src/*"]},
    "resolveJsonModule": true             
  },
  "include": ["src"]
}
